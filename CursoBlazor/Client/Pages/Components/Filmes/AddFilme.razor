@page "/filme/add"
@inject NavigationManager navigatorManager


<h3>Adicionar Filme</h3>

<FormularioFilme Filme="Filme" OnValidSubmit="Adicionar" CategoriaNaoSelecionada="CategoriasNaoSelecionada"/>

@code {

    private List<Categoria> CategoriasNaoSelecionada = new List<Categoria>();

    private Filme Filme = new Filme();

    protected override void OnInitialized()
    {
        CategoriasNaoSelecionada = new List<Categoria>()
    {
            new Categoria(){Id = 1, Nome="Ação"},
            new Categoria(){Id = 2, Nome = "Coméida"},
            new Categoria(){Id = 3, Nome = "Suspense"},
            new Categoria(){Id = 4, Nome = "Terror"}
        };
    }

    void Adicionar()
    {
        Console.WriteLine(navigatorManager.Uri);
        navigatorManager.NavigateTo("filme");
    }

}
